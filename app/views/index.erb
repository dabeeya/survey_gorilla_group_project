<div class="container">

<% if !current_user %>
<!-- SIGN IN -->
  <h3>sign in</h3>

 <font color ="red"> <% if @error %>
    <div class="errors"><%= @error %></div>
  <% end %></font>

  <form id="sign-in" method="post" action="/users">
    <label class="label" for="email">Email: </label>
    <input type="email" name="email" placeholder="e.g., me@example.com" required><br>
    <label class="label" for="password">Password:</label>
    <input type="password" name="password" placeholder="6 or more characters" required>
    <br>
    <div class="submit"><input class="buttons_2" type="submit" value="submit"></div>
  </form>

<br><br>
<!-- SIGN UP -->
  <h3>sign up</h3>

  <% if @user %>
    <%= erb :_model_errors, :layout => false, :locals => { :model => @user } %>
  <% end %>

  <form id="sign-up" method="post" action="/users/new">
    <label class="label" for="name">Name:</label>
    <input type="text" name="user[username]" placeholder="e.g., joe" required>
    <span id="name-errors" class="errors"></span>
    <br>

    <br><label class="label" for="email">Email:</label>
    <input type="email" name="user[email]" placeholder="e.g., me@example.com" required>
    <span id="email-errors" class="errors"></span>
    <br>

    <br><label class="label" for="password">Password</label>
    <input type="password" name="user[password]" placeholder="6 or more characters" required>
    <span id="entered_password-errors" class="errors"></span>    
    <br>

    <br><div class="submit"><input class="buttons_2" type="submit" value="submit"></div>
  </form>

<% end %>

<br><br>

<h3>Recent Public Surveys</h3>
<% @public_surveys.each do |i| %>
<br><br><a href="surveys/<%=i.id%>"><%=i.title%></a>
<% end %>

</div>
